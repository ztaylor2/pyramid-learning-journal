{% extends "layout.jinja2" %}

{% block body %}
    <article>
      <div class="page-header">
        <h1>New Post</h1>
      </div>
      <form method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">Title</label>
          <textarea name="title" class="form-control" id="exampleFormControlTextarea1" rows="1" required></textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Article Body</label>
          <textarea name="body" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
          <div class="submit-button">
            <input type="submit" class="btn btn-primary"></input>
          </div>
        </div>
      </form>
    </article>
{% endblock %}