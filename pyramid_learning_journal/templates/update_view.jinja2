{% extends "layout.jinja2" %}

{% block body %}
    <article>
      <div class="page-header">
        <h1>Edit Post</h1>
      </div>
      <form method="POST">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
        <div class="form-group">
          <label for="exampleFormControlInput1">Title</label>
          <textarea name="title" class="form-control" id="exampleFormControlTextarea1" rows="1" required>{{ entry.title }}</textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Body</label>
          <textarea name="body" class="form-control" id="exampleFormControlTextarea1" rows="5" required>{{ entry.body }}</textarea>
          <div class="submit-button">
            <input type="submit" class="btn btn-primary"></input>
          </div>
        </div>
      </form>
    </article>
{% endblock %}