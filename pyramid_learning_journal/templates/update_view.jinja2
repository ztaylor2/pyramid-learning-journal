{% extends "layout.jinja2" %}

{% block body %}
    <article>
      <div class="page-header">
        <h1>Edit Post</h1>
      </div>
      <form>
        <div class="form-group">
          <label for="exampleFormControlInput1">Title</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="1">{{ entry.title }}</textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Body</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="5">{{ entry.body }}</textarea>
          <div class="submit-button">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>
    </article>
{% endblock %}