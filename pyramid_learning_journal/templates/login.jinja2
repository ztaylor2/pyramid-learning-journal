{% extends "layout.jinja2" %}

{% block body %}
    <article>
      <div class="page-header">
        <h1>Login</h1>
      </div>
      <form method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">Username</label>
          <textarea name="username" id="username" class="form-control" id="exampleFormControlTextarea1" rows="1" required></textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Password</label>
          <textarea name="password" id="password" class="form-control" id="exampleFormControlTextarea1" rows="1" required></textarea>
          <div class="submit-button">
            <input type="submit" class="btn btn-primary"></input>
          </div>
        </div>
      </form>
    </article>
{% endblock %}